	<include file="com/config/struts/Commodity.xml"></include>
	<!-- 查询积分的配置 -->
	<include file="com/config/struts/SearchScore.xml"></include>
	<include file="com/config/struts/Iframes.xml"></include>
	<!--购买充值卡的配置 -->
	<include file="com/config/struts/BuyPrepaidCard.xml"></include>
	<!-- 商品订单的配置 -->
	<include file="com/config/struts/Order.xml"></include>
	<!-- 积分商城的配置 -->
	<include file="com/config/struts/Store.xml"></include>
	<!-- 区域管理 -->
	<include file="com/config/struts/AreaAdmin.xml"></include>
	<!-- 查询余额的配置 -->
	<include file="com/config/struts/SearchCostbalance.xml"></include>
	<!-- 百度地图的配置 -->
	<include file="com/config/struts/Map.xml"></include>
	<!-- 日志的配置 -->
	<include file="com/config/struts/Log.xml"></include>


